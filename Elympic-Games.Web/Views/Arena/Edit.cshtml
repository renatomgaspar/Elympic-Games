@model Elympic_Games.Web.Models.Arenas.ArenaViewModel

@{
    ViewData["Title"] = "Edit Arena";
}

<h1>Edit Arena</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-2">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="TotalCapacity"></label>
                <input asp-for="TotalCapacity" class="form-control" />
                <span asp-validation-for="TotalCapacity" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="AccessibleSeating"></label>
                <input asp-for="AccessibleSeating" class="form-control" />
                <span asp-validation-for="AccessibleSeating" class="text-warning"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CityId" class="form-label">Country</label>
                <select asp-for="CityId" asp-items="Model.Cities" class="form-select"></select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Manage" class="btn btn-success">Back to List</a>
            </div>
        </form>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}