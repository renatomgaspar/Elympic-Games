@model IEnumerable<Elympic_Games.Web.Data.Entities.Arena>

@{
    ViewData["Title"] = "Manage Arenas";
}

<h2>Manage Arenas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New <i class="fa-solid fa-plus"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccessibleSeating)
            </th>
            <th>
                City
            </th>
            <th class="w-25">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCapacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccessibleSeating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit <i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details <i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete <i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>