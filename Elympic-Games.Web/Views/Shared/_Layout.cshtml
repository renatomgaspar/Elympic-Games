<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Elympic_Games.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Elympic_Games.Web.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100 mb-0">
    <header class="pt-5 mb-4">
        <nav class="navbar navbar-expand-sm navbar-light bg-dark border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/elympicGamesLogo.png" width="180px" height="75px" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Manage">Manage Products</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Manage">Manage Users</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Country" asp-action="Manage">Manage Countries</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="City" asp-action="Manage">Manage Cities</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Gametype" asp-action="Manage">Manage Games</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Team" asp-action="Manage">Manage Teams</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Arena" asp-action="Manage">Manage Arenas</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Event" asp-action="Manage">Manage Events</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Match" asp-action="Manage">Manage Matches</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Ticket" asp-action="Manage">Manage Tickets</a></li>
                                </ul>
                            </li>
                        }
                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Team Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Player" asp-action="Manage">Manage Team Players</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Event" asp-action="Index">Events</a>
                            </li>
                        }
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="TicketOrders" asp-action="Cart">Cart <i class="fa-solid fa-cart-shopping"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="ChangeUser">@this.User.Identity.Name<i class="fa-solid fa-user"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Logout">Logout<i class="fa-solid fa-right-from-bracket"></i></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container pt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-dark text-white p-3 mt-auto">
        <div class="container">
            &copy; 2025 - Elympic_Games.Web - Privacy
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
