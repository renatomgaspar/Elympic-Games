@model Elympic_Games.Web.Data.Entities.Match

@{
    ViewData["Title"] = "Delete Match";
}

<h1>Delete Match</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EndDate)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>
                <dt class="col-sm-4">
                    Team One
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TeamOne.Name) - @Html.DisplayFor(model => model.TeamOne.Country.Name)
                </dd>
                <dt class="col-sm-4">
                    Team Two
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TeamTwo.Name) - @Html.DisplayFor(model => model.TeamTwo.Country.Name)
                </dd>
                <dt class="col-sm-4">
                    Event
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Event.Name)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete <i class="fa-solid fa-trash"></i></button>
        <a asp-action="Manage" class="btn btn-success">Back to List <i class="fa-solid fa-circle-left"></i></a>
    </form>
</div>