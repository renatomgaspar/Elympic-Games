@model Elympic_Games.Web.Models.Matches.MatchViewModel

@{
    ViewData["Title"] = "Create Match";
}

<h2>Create Match</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group mb-2">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-warning"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TeamOneId" class="form-label">Team One</label>
                <select asp-for="TeamOneId" asp-items="Model.Teams" class="form-select"></select>
                <span asp-validation-for="TeamOneId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TeamTwoId" class="form-label">Team Two</label>
                <select asp-for="TeamTwoId" asp-items="Model.Teams" class="form-select"></select>
                <span asp-validation-for="TeamTwoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <input type="submit" value="New Match" class="btn btn-primary" />
                <a asp-controller="Event" asp-action="Index" class="btn btn-success">Go Back <i class="fa-solid fa-circle-left"></i></a>
            </div>
        </form>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div id="successDialog" class="modal fade">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Success</h4>
                    <button type="button" class="close" data-dismiss="modal"><i class="fa fa-window-close"></i></button>
                </div>
                <div class="modal-body">
                    <p>@TempData["SuccessMessage"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnOk">Ok</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function(){

            var modal = $("#successDialog");
            if (modal.length) {
                modal.modal("show");
            }

            $("#btnOk").click(function () {
                modal.modal("hide");
            });
        });
    </script>
}
