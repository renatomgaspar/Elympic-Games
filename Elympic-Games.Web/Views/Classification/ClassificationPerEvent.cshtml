@model IEnumerable<Elympic_Games.Web.Data.Entities.Classification>

@{
    ViewData["Title"] = "Classifications";
    var classifications = Model.OrderBy(c => c.Rank).ToList();
    var eventName = ViewBag.EventName as string ?? "Event";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">
            <i class="fa-solid fa-ranking-star me-2"></i>@eventName - Classifications
        </h1>
        <p class="text-muted mb-0">Final rankings and points for all participating teams.</p>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">Rank</th>
                        <th scope="col">Team</th>
                        <th scope="col">Country</th>
                        <th scope="col">Points</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var classification in classifications)
                    {
                        var team = classification.Team;
                        var country = team.Country;

                        string rankBadgeClass = classification.Rank switch
                        {
                            1 => "bg-warning text-dark fw-bold",
                            2 => "bg-secondary text-white",
                            3 => "bg-bronze text-white",
                            _ => "bg-light text-dark"
                        };

                        <tr>
                            <td>
                                <span class="badge rounded-pill @rankBadgeClass px-3 py-2">
                                    @classification.Rank
                                </span>
                            </td>
                            <td class="fw-semibold">
                                <div class="d-flex align-items-center justify-content-center">
                                    @if (!string.IsNullOrEmpty(country?.ImageFullPath))
                                    {
                                        <img src="@Url.Content(country.ImageFullPath)"
                                             alt="@country.Code"
                                             class="rounded-circle me-2 border"
                                             style="width:40px;height:40px;object-fit:cover;" />
                                    }
                                    <span>@team.Name</span>
                                </div>
                            </td>
                            <td>
                                <span class="text-uppercase fw-semibold">@country?.Code</span>
                            </td>
                            <td>
                                <span class="fw-bold text-success">@classification.Points</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Event" asp-action="Index" class="btn btn-success">
            <i class="fa-solid fa-circle-left me-1"></i> Go Back
        </a>
    </div>
</div>


<style>
    /* Bronze for 3rd place */
    .bg-bronze {
        background-color: #cd7f32 !important;
    }

    /* Subtle hover effect */
    table tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease-in-out;
    }
</style>
