@model Elympic_Games.Web.Data.Entities.GameType

@{
    ViewData["Title"] = "Game Details";
}

<h1>Game Details</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TeamSize)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TeamSize)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ActivePlayerNo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ActivePlayerNo)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width:300px;height:450px;max-width:100%;height:auto">
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Manage" class="btn btn-success">Back to List</a>
</div>