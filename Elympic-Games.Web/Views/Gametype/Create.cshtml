@model Elympic_Games.Web.Models.Gametypes.GametypeViewModel

@{
    ViewData["Title"] = "Create new Game";
}

<h1>New Game</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="TeamSize" class="control-label"></label>
                <input asp-for="TeamSize" class="form-control" />
                <span asp-validation-for="TeamSize" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ActivePlayerNo" class="control-label"></label>
                <input asp-for="ActivePlayerNo" class="form-control" />
                <span asp-validation-for="ActivePlayerNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Manage" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}