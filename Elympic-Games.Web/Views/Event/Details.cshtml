@model Elympic_Games.Web.Data.Entities.Event

@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>
                <dt class="col-sm-4">
                    Arena
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Arena.Name)
                </dd>
                <dt class="col-sm-4">
                    City
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Arena.City.Name)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            <img src="@Url.Content(Model.Arena.City.Country.ImageFullPath)" alt="Image" style="width:300px;height:450px;max-width:100%;height:auto">
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Manage" class="btn btn-success">Back to List</a>
</div>