@model Elympic_Games.Web.Models.Events.EventViewModel

@{
    ViewData["Title"] = "Edit Event";
}

<h1>Edit Event</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-2">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-warning"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GameTypeId" class="form-label">Game</label>
                <select asp-for="GameTypeId" asp-items="Model.GameTypes" class="form-select"></select>
                <span asp-validation-for="GameTypeId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ArenaId" class="form-label">Arena</label>
                <select asp-for="ArenaId" asp-items="Model.Arenas" class="form-select"></select>
                <span asp-validation-for="ArenaId" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <button type="submit" value="Save" class="btn btn-primary">Save <i class="fa-solid fa-pen-to-square"></i></button>
                <a asp-action="Manage" class="btn btn-success">Back to List <i class="fa-solid fa-circle-left"></i></a>
            </div>
        </form>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}