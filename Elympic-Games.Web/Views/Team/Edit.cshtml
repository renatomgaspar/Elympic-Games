@model Elympic_Games.Web.Models.Teams.TeamViewModel

@{
    ViewData["Title"] = "Edit Team";
}

<h1>Edit Team</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GameTypeId" class="form-label"></label>
                <select asp-for="GameTypeId" asp-items="Model.GameTypes" class="form-select"></select>
                <span asp-validation-for="GameTypeId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CountryId" class="form-label"></label>
                <select asp-for="CountryId" asp-items="Model.Countries" class="form-select"></select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TeamManagerId" class="form-label"></label>
                <select asp-for="TeamManagerId" asp-items="Model.Users" class="form-select"></select>
                <span asp-validation-for="TeamManagerId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <button type="submit" value="Save" class="btn btn-primary">Save <i class="fa-solid fa-pen-to-square"></i></button>
                <a asp-action="Manage" class="btn btn-success">Back to List <i class="fa-solid fa-circle-left"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}